@model CategoryListViewModel
@{
}

<h2>Category List</h2>
<ul class="list-group">
    
    @{
        var titCss = "list-group-item";
        if (Model.CurrentCategory == 0)
            titCss += " active";
        <a href="/product/index" class="@titCss">Tümü Ürünler</a>
    }
    
    
    @foreach(var cat in Model.Categories)
    {
        var css = "list-group-item";
        if (cat.CategoryId == Model.CurrentCategory)
            css += " active";
        <a href="/product/index?category=@cat.CategoryId" class="@css">@cat.CategoryName</a>
    }
</ul>